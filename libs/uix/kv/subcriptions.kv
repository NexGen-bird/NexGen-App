<SubcriptionCard>
    padding: "10dp"
    # spacing: "10dp"
    size_hint: None, None
    size: "640dp", "150dp"
    theme_bg_color: "Custom"
    md_bg_color: "#E1F4F1" if root.status == "Active" else "#FFECEC"
    style: "outlined"
 
    MDRelativeLayout:
        MDLabel:
            text: root.name[:28]+str("...") if len(root.name)>25 else root.name
            adaptive_size: True
            color: "black"
            pos_hint: {"top": 1, "left": 1}
            bold: False
            font_style: "Title"
            role:"medium"
        MDLabel:
            text: root.status
            adaptive_size: True
            color: "grey"
            pos_hint: {"top": 1, "right": 1}
            bold: True
            font_style: "Title"
            role:"medium"
            theme_text_color: "Custom"
            text_color: root.Color if root.Color else "green"
        MDLabel:
            text: "Plan Type"
            adaptive_size: True
            color: "grey"
            pos_hint: {"y": 0.6, "left": 1}
            bold: False
            font_style: "Title"
            role:"medium"
        MDLabel:
            text: root.plan
            adaptive_size: True
            color: "black"
            pos_hint: {"y": 0.4, "left": 1}
            bold: False
            font_style: "Title"
            role:"medium"
        MDLabel:
            text: "Shift"
            adaptive_size: True
            color: "grey"
            pos_hint: {"y": 0.6, "center_x": 0.5}
            bold: False
            font_style: "Title"
            role:"medium"
        MDLabel:
            text: root.shift
            adaptive_size: True
            color: "black"
            pos_hint: {"y": 0.4, "center_x": 0.5}
            bold: False
            font_style: "Title"
            role:"medium" 
        MDLabel:
            text: "Locker No."
            adaptive_size: True
            color: "grey"
            pos_hint: {"y": 0.6, "right": 1}
            bold: False
            font_style: "Title"
            role:"medium"
        MDLabel:
            text: root.locker_no
            adaptive_size: True
            color: "black"
            pos_hint: {"y": 0.4, "right": 1}
            bold: False
            halign: "center"
            font_style: "Title"
            role:"medium"
        MDLabel:
            text: "Start Date"
            adaptive_size: True
            color: "grey"
            pos_hint: {"y": 0.2, "left": 1}
            bold: False
            font_style: "Title"
            role:"medium"
        MDLabel:
            text: root.startdate
            adaptive_size: True
            color: "black"
            pos_hint: {"bottom": 1, "left": 1}
            bold: False
            font_style: "Title"
            role:"medium"
        MDLabel:
            text: "Expiry Date"
            adaptive_size: True
            color: "grey"
            pos_hint: {"y": 0.2, "right": 1}
            bold: False
            font_style: "Title"
            role:"medium"
        MDLabel:
            text: root.expirydate
            adaptive_size: True
            color: "black"
            pos_hint: {"bottom": 1, "right": 1}
            bold: False
            font_style: "Title"
            role:"medium"


<SubcriptionCardList>:
    name:"subcription_list"
    theme_bg_color: "Custom"
    md_bg_color: app.getval("BACKGROUND_COLOR")
    MDBoxLayout:
        orientation: "vertical"
        
        # Fixed Top App Bar
        MDTopAppBar:
            theme_bg_color: "Custom"
            md_bg_color: app.getval("PRIMARY_COLOR")
            elevation: 5
            MDTopAppBarLeadingButtonContainer:
                MDActionTopAppBarButton:
                    icon: "menu"
                    on_release: app.root.children[0].set_state("open")
            MDTopAppBarTitle:
                text: " "
            MDTopAppBarTrailingButtonContainer:
                # pos_hint: {"center_x": 1, "center_y": .5}

                MDActionTopAppBarButton:
                    icon: "logout"
                    on_release: app.logout()
        MDBoxLayout:
            id: mainbox
            orientation: 'vertical'
            spacing: dp(10)
            padding: dp(20)
            MDBoxLayout:
                adaptive_height: True
                size_hint: 1,None
                pos_hint:{"center_x": 0.5}
                MDButton:
                    id: back
                    style: "filled"
                    pos_hint: {"left": 1,"center_y": 0.5}
                    theme_bg_color: "Custom"
                    md_bg_color: app.getval("PRIMARY_COLOR")
                    on_release: root.parent.previous_screen()

                    MDButtonText:
                        text: "Back"
                MDLabel:
                    text: " Subcriptions "
                    pos_hint: {"center_x": 1,"center_y": .5}
            MDBoxLayout:
                id: filters
                adaptive_height: True
                size_hint: .88,None
                pos_hint:{"center_x": 0.5}

                # MDIconButton:
                #     icon: 'account-search'

                MDTextField:
                    id: search_field
                    hint_text: 'Search Customer'
                    # mode: "round"
                    on_text: root.set_list_items(self.text, True)
                    MDTextFieldLeadingIcon:
                        icon: "magnify"
                    MDTextFieldHintText:
                        text: "Search Transaction"
                        # mode: "persistent"
            # MDScrollView:
            #     do_scroll_x: False

            #     MDBoxLayout:
            #         id: main_scroll
            #         orientation: "vertical"
            #         adaptive_height: True
            RecycleView:
                id: rv
                key_viewclass: 'viewclass'
                key_size: 'height'
                # spacing:dp(10)
                # padding: dp(10)
                theme_bg_color: "Custom"
                md_bg_color: app.getval("BACKGROUND_COLOR")
                RecycleBoxLayout:
                    spacing: dp(10)
                    padding: dp(10)
                    default_size: None, None
                    default_size_hint: 1, None
                    size_hint_y: None
                    height: self.minimum_height
                    orientation: 'vertical'
                    theme_bg_color: "Custom"
                    md_bg_color: app.getval("BACKGROUND_COLOR") 