<Login_Screen>:
    name: "login"
    MDFloatLayout:
        theme_bg_color: "Custom"
        md_bg_color: app.getval("BACKGROUND_COLOR")
        
        MDLabel:
            text: "W e l c o m e   !"
            font_name: "assets/fonts/Poppins-Bold.ttf"
            font_size: "26sp"
            pos_hint:{"center_x":0.5,"center_y":.85}
            halign:"center"
            color: app.getval("TEXT_SECONDARY")
        MDLabel:
            text: "Sign in to continue."
            # markup:True
            font_name: 'assets/fonts/Roboto-Regular.ttf'
            font_size: "17sp"
            halign:"center"
            pos_hint:{"center_y":.79}
            color: app.getval("TEXT_PRIMARY")
        MDFloatLayout:
            size_hint: .80,.07
            pos_hint:{"center_x":0.53,"center_y":.63}
            MDTextField:
                id: Email
                mode: "outlined"
                pos_hint:{"center_x":.43,"center_y":0.5}
                theme_line_color: "Custom"
                ine_color_focus: app.getval("PRIMARY_COLOR")
                MDTextFieldHintText:
                    text: "Email"
            
        MDFloatLayout:
            size_hint: .80,.07
            pos_hint:{"center_x":0.53,"center_y":.5}
            MDTextField:
                id: Password
                mode: "outlined"
                password:True
                pos_hint:{"center_x":.43,"center_y":0.5}
                MDTextFieldHintText:
                    text: "Password"
                # max_text_length: 10
                # input_filter: "int"
            MDIconButton:
                icon: "eye-off"
                pos_hint: {"center_y": .5}
                pos: Password.width - self.width + dp(10), 0
                theme_text_color: "Hint"
                # pos_hint:{"center_x":.98,"center_y":0.5}
                on_release:
                    self.icon = "eye" if self.icon == "eye-off" else "eye-off"
                    Password.password = False if Password.password is True else True
                
            
        MDButton:
            style: "filled"
            pos_hint:{"center_x":.5,"center_y":.35}
            size_hint:.66,.065
            theme_bg_color: "Custom"
            md_bg_color: app.getval("BUTTON_PRIMARY_BG")
            # background_color:0,0,0,0
            font_name: "assets/fonts/Poppins-Bold.ttf"
            on_release:
                root.login(Email.text,Password.text)

            MDButtonText:
                text: "LOGIN"
                # app.screen_manager.change_screen("home")
        MDFloatLayout:
            orientation: "horizontal"
            size_hint: .80,.07
            pos_hint:{"center_x":0.35,"center_y":.43}
            MDCheckbox:
                id: rem_check
                pos_hint:{"center_x":.19,"center_y":0.43}
                active: root.is_remember
                on_active: root.on_checkbox_active(*args)
            MDLabel:
                text: "Remember Password"
                pos_hint:{"x":0.27,"center_y":.39}
                adaptive_height: True
                # padding_x: "12dp"
                # pos_hint: {"center_y": .5}
            
        MDButton:
            style: "text"
            pos_hint:{"center_x":0.5,"center_y":.25}
            color: rgba(68,78,132,255)
            font_size:"14sp"
            on_release:
                root.forgot_password(Email.text)

            MDButtonText:
                text:"Forgot Password ?"
