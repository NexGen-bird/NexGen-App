                            role: "small"
                            halign: "left"
                            halign: "center"
                            adaptive_height: True
                            pos_hint: {"center_y": 0.5}
                            theme_text_color: "Custom"
                            text_color: app.getval("TEXT_PRIMARY")
                        MDLabel:
